root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.rb]
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 100
quote_type = single
trim_trailing_whitespace = true

[*.{json,yml}]
indent_style = space
indent_size = 2
